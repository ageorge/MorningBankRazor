@page
@model MorningBankRazor.Pages.Loans.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Apply for a new Loan</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Loan[0].LoanName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loan[0].LoanAmt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Loan[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Loan) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LoanName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoanAmt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.LoanId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
